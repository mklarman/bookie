<div class = "hide">


	<%= form_for @client do |c| %>

		TYPE: <div><%= c.text_field :bet_types, :value => @client.bet_types  %></div>
		# OF WAGERS: <div><%= c.text_field :wager_limit, :value => @client.wager_limit  %></div>
		SPORTS: <div><%= c.text_field :sports, :value => @client.sports  %></div>
		STAKES: <div><%= c.text_field :stakes, :value => @client.stakes  %></div>
		<%= c.submit %>



	<% end %>



</div>


<% @leagues.each do |l| %>

	<% if l.id.to_i == @client.league_id.to_i %>

