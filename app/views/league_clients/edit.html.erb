	var wagerType = "<%= @client.bet_types %>"
	var stakes = "<%= @client.stakes %>"
	var wagerLimit = "<%= @client.wager_limit %>"
	var sports = "<%= @client.sports %>"

	function turnBlue(array){

		for(i=0; i<array.length; i++){

