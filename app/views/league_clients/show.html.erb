<% @nfl_games = [] %>
<% @fan_games = [] %>
<% @nba_games = [] %>
<% @cfb_games = [] %>
<% @cbb_games = [] %>
<% @mlb_games = [] %>
<% @nhl_games = [] %>
<% @teaser_options %>
<% @all_other_options %>
<% @bet_type %>
<% @amount %>

<% self.sort_teams_for_leagues %>
<% self.count_options %>


<%= @teaser_options %>
<%= @all_other_options %>

<% @client_holder = [] %>

<% @qualified_clients = [] %>


<% @clients.each do |c| %>

	<% if c.league_id == @client.league_id %>

		<% @client_holder.push(c) %>

	<% end %>


<% end %>

<% @client_holder.each do |c| %>

	<% @wager_num = 0 %>

	<% @wagers.each do |w| %>

		<% if c.id.to_i == w.league_client_id.to_i %>

			<% @wager_num = @wager_num + 1 %> 

		<% end %>

	<% end %>

	<% if @wager_num < c.wager_limit.to_i %>

		<% @qualified_clients.push(c) %>


	<% end %>



<% end %>

<%= @qualified_clients[0].id %>

<% self.create_league_wager(@qualified_clients[0]) %>

<%= @amount %>
<%= @bet_type %>





<% render "new" %>