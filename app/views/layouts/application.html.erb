<!DOCTYPE html>
<html>
  <head>
    <title>Bookie</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

    <div id="pic">
  
      <p>WELCOME TO FANBOUTS.COM</p>
  
    </div>


    <% @my_client %>
    <% self.get_access %>

    <div id="navbar">

      <% if !current_user %>

        <div class ="nav_links"><%= link_to "Sign Up", new_user_registration_path, class: 'link_tabs'  %></div>
        <div class ="nav_links"><%= link_to "HOME", user_session_path, class: 'link_tabs'  %></div>

      <% elsif current_user && current_user.admin == true %>

          <div class ="nav_links"> <%= link_to "Sign Out", destroy_user_session_path, method: :delete, class: 'link_tabs'  %></div>

          
          <div class ="nav_links"><%= link_to "MY PROFILE", users_profile_path, class: 'link_tabs'  %></div>
          
          <div class ="nav_links"><%= link_to "PLAY BOOKIE WARS", leagues_path %></div>
          <div class ="nav_links"><%= link_to "PLAY FANICIDE POOLS", pools_path %></div>
          <div class ="nav_links"><%= link_to "New Team", new_team_path, class: 'link_tabs'  %></div>
          <div class ="nav_links"><%= link_to "Team List", teams_path, class: 'link_tabs'  %></div>
          <div class ="nav_links"><%= link_to "Player List", players_path, class: 'link_tabs'  %></div>
          <div class ="nav_links"><%= link_to "Open Tickets", tickets_path, class: 'link_tabs'  %></div>


      <% else %>
     

      	<div class ="nav_links"><%= link_to "Sign Out", destroy_user_session_path, method: :delete, class: 'link_tabs'  %></div>

      
        <div class ="nav_links"><%= link_to "MY PROFILE", users_profile_path, class: 'link_tabs'  %></div>
        <div class ="nav_links"><%= link_to "PLAY BOOKIE WARS", leagues_path %></div>
        <div class ="nav_links"><%= link_to "PLAY FANICIDE POOLS", pools_path %></div>

      <% end %>

    </div>

  	
    <%= yield %>
  </body>
</html>
