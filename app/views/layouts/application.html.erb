<!DOCTYPE html>
<html>
  <head>
    <title>Bookie</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>


    <% @my_client %>
    <% self.get_access %>

    <% if !current_user %>

      <%= link_to "Sign Up", new_user_registration_path, class: 'link_tabs'  %>
      <%= link_to "HOME", user_session_path, class: 'link_tabs'  %>

    <% elsif current_user && current_user.admin == true %>

      <%= link_to "Sign Out", destroy_user_session_path, method: :delete, class: 'link_tabs'  %>

        
        <%= link_to "MY PROFILE", users_profile_path, class: 'link_tabs'  %>
        <%= link_to "PLAY BOOKIE WARS", leagues_path %>
        <%= link_to "PLAY FANISIDE POOLS", pools_path %>
        <%= link_to "New Team", new_team_path, class: 'link_tabs'  %>
        <%= link_to "Team List", teams_path, class: 'link_tabs'  %>
        <%= link_to "Player List", players_path, class: 'link_tabs'  %>
        <%= link_to "Open Tickets", tickets_path, class: 'link_tabs'  %>


    <% else %>
   

    	<%= link_to "Sign Out", destroy_user_session_path, method: :delete, class: 'link_tabs'  %>

    
      <%= link_to "MY PROFILE", users_profile_path, class: 'link_tabs'  %>
      <%= link_to "PLAY BOOKIE WARS", leagues_path %>
      <%= link_to "PLAY FANISIDE POOLS", pools_path %>

    <% end %>

  	
    <%= yield %>
  </body>
</html>
