	<% end %>

	<div><% link_to "BOOK TOURNAMENT ACTION", new_league_wager_path, class: 'link_tabs' %></div>

<% else %>

	<%= link_to "ACQUIRE TOURNAMENT CLIENTS", new_league_client_path, class: 'link_tabs'  %>

	
	

<% end %>

<% self.display_client_form %>



<div class = "hide">

	<%= render "client" %>

</div>


