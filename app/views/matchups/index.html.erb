<% @date = Time.now %>
<% @day = @date.strftime("%d") %>
<% @month = @date.strftime("%b") %>
<% @year = @date.strftime("%Y") %>

<% @my_date = @day << " " <<@month << " " <<@year %>
<%= @my_date %>


<% @matchup.each do |m| %>

		<div><%= m.date %></div>
		
		<div><%= m.start_time %></div>
		
		<div><%= m.sport %></div>
		<div><%= m.fav %></div>
		<div><%= m.dog %></div>
		<%= link_to "Add Score", edit_matchup_path(m.id), class: 'link_tabs'  %>
		<br>

	

<% end %>