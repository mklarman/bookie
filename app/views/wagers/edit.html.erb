		<div><%= w.hidden_field :user_bankroll %></div>
		<div><%= w.hidden_field :client_bankroll %></div>
		<div><%= w.hidden_field :outcome %></div>
		<div><%= w.hidden_field :graded %></div>
		<div><%= w.submit%></div>

	<% end %>
</div>
