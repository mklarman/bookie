<% if current_user.wagers %>

	<% current_user.wagers.each do |w| %>

		<% if w.graded === true %>

			<% if w.user_bankroll == 0 %>

				<% w.user_bankroll = 5000 %>

			<% end %>

				<% @user_b.push(w) %>
						

		<% end %>

	<% end %>

	<% @user_b2.push(@user_b.last) %>

