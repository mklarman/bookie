<% if current_user.wagers %>

	<% current_user.wagers.each do |w| %>

		<% if w.graded === true %>

			<% if w.user_bankroll == 0 %>

				<% w.user_bankroll = 5000 %>

			<% end %>

			<div><% @user_b.push(w.user_bankroll) %></div>		

		<% end %>

	<% end %>

	<%= @current_br = @user_b.last %>

<% end %>

<% current_user.clients.each do |c| %>

