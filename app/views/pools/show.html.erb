<% @my_date %>
<% self.get_time %>
<% @players_left = [] %>
<% @contestants = [] %>
<% @selection_holder = [] %>
<% @needs_grading = false %>
<% @this_pools_groups = [] %>
<% @recalled = [] %>
<% @pool_players = [] %>
<% @pool_standings = [] %>
<% @off_stand = [] %>
<% @sorted_standings %>

<% self.get_pool_players %>
<% self.get_all_selections %>
<% self.get_pool_standings(@pool_standings) %>

<div class="group">
	
	<script>

		var player1 = ""
		var player2 = ""
		var player3 = ""
		var player4 = ""
		var player5 = ""
		var player_holder = []
			

		<% Group.all.each do |g| %>

			<% if g.pool_id.to_i == @pool.id.to_i %>

				<% if g.date == @my_date %>

					player1 = "<%= g.player1 %>"
					player_holder.push(player1)
					
					player2 = "<%= g.player2 %>"
					player_holder.push(player2)

					<% if g.player3.length > 0 %>

						player3 = "<%= g.player3 %>"
						player_holder.push(player3)

					<% end %>

					<% if g.player4.length > 0 %>

						player4 = "<%= g.player4 %>"
						player_holder.push(player4)

					<% end %>

					<% if g.player5.length > 0 %>

						player5 = "<%= g.player5 %>"
						player_holder.push(player5)

					<% end %>




				<% end %>



			<% end %>



		<% end %>


		







	</script>

</div>

<% @off_stand.each do |st| %>

	<% if st.class == Hash %>

		<div class="player_standings"><%= st[:name].to_s + " " + st[:picks].to_s %></div>

	<% end %>



<% end %>

<div>

	<%= form_for @group do |g| %>

		<%= g.text_field :pool_id, value: @pool.id %>
		<%= g.text_field :date, value: @my_date %>
		<%= g.text_field :player1 %>
		<%= g.text_field :player2 %>
		<%= g.text_field :player3 %>
		<%= g.text_field :player4 %>
		<%= g.text_field :player5 %>

		<%= g.submit %>

	<% end %>

</div>




































