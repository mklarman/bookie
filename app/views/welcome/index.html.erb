<% @my_date %>

<% self.get_time %>

<%= @my_date %>

<div id=page_wrapper>
<% current_user.clients.each do |c| %>

		<br>

		

		<% c.wagers.each do |w| %>

			<% if w.graded == false && w.date != @my_date %>

			<div id="ungraded_wager">

				<div class="name_font"><%= c.first_name %>
									<%= c.last_name %></div>

				<div id="grade_wager">

					<div><%= w.amount %>
						<%= w.wager_type %></div>

					<%= link_to "Grade Wager", edit_wager_path(w.id), class: 'link_tabs'  %>
				</div>

				<br>
			</div>

			<% end %>


		<% end %>



	<% end %>

</div>

<% current_user.wagers.each do |w| %>

	<% if w.graded == false %>

		<%= w.wager_type %>
		<%= w.amount %>
		<%= w.date %>
		<div><%= w.id %></div>


	<% end %>


<% end %>